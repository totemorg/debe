extends base
append base_help
	:markdown
		# Render project RTP:

			- src = path to notebook (!{query.src})
			- mode = viewing mode run||exam||view||etc (!{query.mode})
			- name = notebook name (!{query.name})
			- cols = dataset columns "key.type.label, ..." (!{query.cols})
			- client = client viewing this notebook (!{client})

		[sample](/run.help?src=/nets.run&name=gtdcsv)  
		[example](/nets.run?name=gtdcsv)

extends site
append site_parms
	- view = "kiss"

append site_body
	- title = `${name} Research Technology Plan`
	- folder = `/shares/${name}`

	h1= title
	img(src="#{folder}/logo.jpg")
	iframe(src='/barplot.view',width=600,height=200)

	:markdown
		This is a RTP doc

	each i in [1,2,3]
		:markdown
			# [Section #{i}](/faqs.view)  
		iframe(src="/faqs.html?Num:=Seq&Question:=Q&Answer:=A&Seq=#{i}",width=1200,height=200,style="border:none")
