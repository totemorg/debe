//- UNCLASSIFIED
extends layout
append layout_help
	:markdown
		# base options:

			- tech = skinning tech flow || d3 || world || usa || cubeland || forest || simple || three || reveal || scene || elFinder || isotope || apy || layout || dojo || extjs (!{tech})
			- highlight = code highlighting tech (!{highlight})
			- math = enable embedded math (!{math})
			- capture = enable browser canvas capture (!{capture})

		### extjs options:

			- ext_carousel = false
			- ext_charting = false
			- ext_codeEdit = true
			- ext_jsonEdit = true
			- ext_theme = "crisp || ..." 

		### tablayout options:

			- layout_grid = "datatable || w2ui || easyui || jqgrid"
			- layout_image = "darkroom || vide || fabric || camen" 
			- layout_theme = "..."

		### three options:

			- three_effect = "AnaglyphEffect || ... "

	block base_help

append layout_parms
	block base_parms
		// base options
		- tech = "d3v5"
		- highlight = ""
		- math = false
		- capture = false
		- editor = true
		// extjs
		- ext_carousel = false
		- ext_charting = false
		- ext_codeEdit = true
		- ext_jsonEdit = true
		- ext_theme = "crisp" 
		// layout
		- layout_grid = "datatable"
		- layout_image = "darkroom" 
		- layout_theme = ""
		// three
		- three_effect = "AnaglyphEffect"

